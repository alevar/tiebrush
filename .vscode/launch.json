    "configurations": [
        {
            "name": "Debug tiebrush aleksey",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tiebrush",
            "args": ["-o","${workspaceFolder}/example/aleksey/t1.tb.bam", "${workspaceFolder}/example/aleksey/tissue1.sub.bam", "${workspaceFolder}/example/aleksey/tissue2.sub.bam"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.print-object-description true",
                    "ignoreFailures": true
                },
                {
                    "description": "Set breakpoint on throw",
                    "text": "breakpoint set -E c++",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build"
        },
